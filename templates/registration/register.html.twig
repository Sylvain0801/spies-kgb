{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<div id="heading">
		<h1>Inscription</h1>
	</div>
	<section id="main" class="wrapper">
		<div class="inner">
			<div class="content">
				<div class="row">
					<div class="col-8 col-12-medium">
						{% for flashError in app.flashes('verify_email_error') %}
							<div class="alert alert-danger" role="alert">{{ flashError }}</div>
						{% endfor %}

						<h1>Formulaire d'inscription</h1>

						{{ form_start(registrationForm) }}
              <div class="row">
                <div class="col-6 col-12-small">
                  {{ form_row(registrationForm.firstname, { label: 'Pr√©nom' }) }}
                </div>
                <div class="col-6 col-12-small">
                  {{ form_row(registrationForm.lastname, { label: 'Nom' }) }}
                </div>
              </div>
              {{ form_row(registrationForm.email) }}
              {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
              {{ form_widget(registrationForm.agreeTerms) }}
              {{ form_label(registrationForm.agreeTerms) }}
              <button type="submit" class="button primary" style="display: block;">S'inscrire</button>
						{{ form_end(registrationForm) }}

					</div>
					<div class="col-4 col-12-medium logo-kgb"></div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
