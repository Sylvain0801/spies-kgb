{% extends "admin/index.html.twig" %}
{% block table %}
<div class="col-5 col-12-medium">
  <div class="table-wrapper">
    <h3 class="table-title icon fa-caret-right">&nbsp;Section {{ section }}</h3>
    {% for message in app.flashes('message_admin') %}
      <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
    <table>
      <thead>
        <tr>
          {% for key, header in headers %}
            <th>
              <div class="headers">
                {{ header }}
                <div class="sort-buttons">
                  <a href="{{ path('admin_statute_list', {'header': key , 'sorting': 'DESC'}) }}" class="icon fa-caret-up" title="Tri décroissant"></a>
                  <a href="{{ path('admin_statute_list', {'header': key , 'sorting': 'ASC'}) }}" class="icon fa-caret-down" title="Tri croissant"></a>
                </div>
              </div>
            </th>
          {% endfor %}
          <th>Actions</th>  
        </tr>
      </thead>
      <tbody>
        {% for statute in statutes %}   
          <tr>
            <td>{{ statute.name }}</td>
            <td>
              <div class="color-display" style="background-color:{{statute.color}}"></div>
            </td>
            <td>
              <a href="{{ path('admin_statute_list', {'id':statute.id}) }}" class="button small icon fa-pencil" role="button" title="Editer"></a>
              <a href="{{ path('admin_statute_delete', {'id':statute.id}) }}" class="button primary small icon fa-trash" role="button" title="Supprimer" onclick="return confirm('Le statut {{ statute.name }} va être définitivement supprimé, ce choix doit être confirmé ?')"></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  {% if statutes.getTotalItemCount > 8 %}
    <div class="navigation">
      {{ knp_pagination_render(statutes) }}
    </div>
  {% endif %}
</div>
<div class="col-5 col-12-medium" style="padding-top: 3rem;">
  {{ form_start(statuteForm) }}
  {{ form_row(statuteForm.name) }}
  {{ form_row(statuteForm.color) }}
    <button type="submit" class="button primary icon fa-save" style="margin-top: 2rem">Enregistrer</button>
  {{ form_end(statuteForm) }}
</div>
{% endblock %}